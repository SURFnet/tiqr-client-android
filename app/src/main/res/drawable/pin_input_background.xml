<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item android:bottom="7dp" android:left="-2dp" android:right="-2dp" android:top="-2dp">
                <shape>
                    <stroke android:width="1dp" android:color="?attr/colorControlActivated" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item android:bottom="7dp" android:left="-2dp" android:right="-2dp" android:top="-2dp">
                <shape>
                    <stroke android:width="1dp" android:color="?attr/colorControlNormal" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>